<h1><%= question_header(@question, @test) %></h1>

<%= form_with model: [@test, @question] do |form| %>
	<%= render 'shared/errors', resource: @question %>

	<p>
		<%= form.label :body %><br>
		<%= form.text_field :body, id: :question_body %>
	</p>

	<p>
		<%= form.label :category_id %>:
		<%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
	</p>

	<p><%= form.submit %></p>
<% end %>