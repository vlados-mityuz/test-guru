<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if signed_in? %>
      <p class="nav user">
        Welcome, <b><%= current_user.email %> <%= link_to 'Guru', root_path %> <%= link_to 'Log out', destroy_user_session_path, method: :delete %></b></p>
    <% else %>
      <p class="nav user"><%= link_to 'Register', new_user_registration_path %> <%= link_to 'Log in', new_user_session_path %></p>
    <% end %>

    <%= render 'shared/flash' %>

    <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>
