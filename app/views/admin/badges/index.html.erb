<p id="notice"><%= notice %></p>

<h1>Badges</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @badges.each do |badge| %>
      <tr>
        <td><%= badge.title %></td>
        <td><%= tag.img src: image_url(badge.image_url), style: 'height:50px;width:80px;' %></td>
        <td><%= link_to 'Show', [:admin, badge] %></td>
        <td><%= link_to 'Edit', edit_admin_badge_path(badge) %></td>
        <td><%= link_to 'Destroy', [:admin, badge], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Badge', new_admin_badge_path %>