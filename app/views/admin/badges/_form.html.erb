<%= form_with(model: [:admin, badge]) do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <div class="form-group">
    <%= form.label :title %><br>
    <p>
      <%= form.select :title, options_for_select(Badge::CATEGORIES), prompt: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image_url %>
    <%= form.text_field :image_url, class: "form-control" %>
  </div>

  <div type="submit">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>